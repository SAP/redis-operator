    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Operator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "--kubeconfig=${workspaceFolder}/tmp/kubeconfig",
                "--webhook-tls-directory=${workspaceFolder}/tmp/ssl",
                "--zap-log-level=debug"
            ]
        }
    ]
}
